{
  "compilerOptions": {
    "incremental": false,
    "composite": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "nodenext",
    "jsx": "react-native",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
